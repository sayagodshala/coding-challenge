<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear_phoneno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_entermobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="SMS not recieved, resend again \n edit if required"
                android:textColor="@color/dingdong_blue1"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_phoneno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:digits="0123456789"
                android:hint="MOBILE NUMBER"
                android:inputType="number"
                android:maxLength="10"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:gravity="center"
                android:textColor="#373737"
                android:textColorHint="#9b9b9b"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/seperator1" />


            <Button
                android:id="@+id/button_resend"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_green_rounded"
                android:padding="5dp"
                android:text="RESEND"
                android:textColor="@color/app_white"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_sms"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtsmssent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="SMS is sent to the above number"
                android:textColor="@color/grey15"
                android:textSize="14sp" />




            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edit_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:digits="0123456789"
                        android:hint="ENTER OTP"
                        android:inputType="number"
                        android:maxLength="4"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:textColor="#373737"
                        android:textColorHint="#9b9b9b"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignLeft="@+id/edit_code"
                        android:layout_alignRight="@+id/edit_code"
                        android:layout_below="@+id/edit_code"
                        android:layout_marginTop="5dp"
                        android:background="@color/seperator1" />


                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relative_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone">

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_spinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            wheel:matProg_barColor="#DA3939"
            wheel:matProg_progressIndeterminate="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_verify"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_blue_rounded"
        android:text="VERIFY"
        android:textColor="@color/app_white"
        android:textSize="15sp" />

</RelativeLayout>