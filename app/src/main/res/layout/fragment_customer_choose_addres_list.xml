<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/container_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:clickable="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dingdong_blue_dark" />

        <TextView
            android:id="@+id/text_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Deliver Here"
            android:layout_centerVertical="true"
            android:textColor="@color/dingdong_blue"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/layout_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/text_checkout"
            android:clickable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_rupee1" />

            <TextView
                android:id="@+id/text_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="198"
                android:textColor="#323232"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/dingdong_blue_dark"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/button_forward"/>

        </LinearLayout>

    </RelativeLayout>



    <ListView
        android:id="@+id/list_views"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/container_submit"
        android:divider="@color/seperator2"
        android:dividerHeight="0.5dp"
        android:scrollbars="none"></ListView>

    <LinearLayout
        android:id="@+id/container_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/event_no_empty_data" />

        <TextView
            android:id="@+id/text_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorry, unable to load data!."
            android:textColor="@color/grey5"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_reload"
            fontPath="@string/font_roboto_medium"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_blue_rounded"
            android:text="Reload"
            android:textColor="@color/app_white"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/event_no_empty_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your address list is empty, add one!"
            android:textColor="@color/grey5"
            android:textSize="15sp" />


        <Button
            android:id="@+id/button_add"
            fontPath="@string/font_roboto_medium"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_blue_rounded"
            android:text="ADD"
            android:textColor="@color/app_white"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_no_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/event_no_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please check your internet settings."
            android:textColor="@color/grey5"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_enable_data"
            fontPath="@string/font_roboto_medium"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_blue_rounded"
            android:text="SETTINGS"
            android:textColor="@color/app_white"
            android:textSize="16sp" />


    </LinearLayout>

</RelativeLayout>
