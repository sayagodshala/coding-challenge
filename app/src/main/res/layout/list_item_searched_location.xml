<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:id="@+id/view_top_spacer"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/view_top_spacer"
        android:layout_height="70dp"
        android:id="@+id/linear_selector"
        android:padding="10dp"
        android:background="@color/app_white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/relative_icons"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:id="@+id/image_time"
                android:src="@drawable/ic_address" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:id="@+id/image_location_search"
                android:src="@drawable/ic_location1" />

            <ImageView
                android:layout_width="15dp"
                android:layout_centerVertical="true"
                android:layout_height="15dp"
                android:id="@+id/image_location"
                android:src="@drawable/location" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="HOME"
                android:singleLine="true"
                android:id="@+id/text_title"
                android:textSize="15sp"
                android:textColor="#6b6b6b" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="sdkjs sd gsd dg"
                android:id="@+id/text_subtitle"
                android:textSize="13sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/grey8" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
