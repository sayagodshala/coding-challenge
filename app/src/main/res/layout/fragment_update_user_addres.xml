<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADDRESS"
                    android:textColor="#9b9b9b"
                    android:textSize="9sp" />

                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_address"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:hint="Flat No., Building Name, Society/Office Name"
                    android:inputType="textPostalAddress"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text=""
                    android:textColor="#373737"
                    android:textColorHint="#9b9b9b"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e2e2e2" />

            <RelativeLayout
                android:id="@+id/rl_landmark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/text_nearest_landmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nearest Landmark in"
                    android:textColor="#9b9b9b"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/edit_nearest_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_nearest_landmark"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:singleLine="true"
                    android:text="Nearest Landmark"
                    android:textColor="#9b9b9b"
                    android:textColorHint="#9b9b9b"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e2e2e2" />

            <RelativeLayout
                android:id="@+id/relative_current_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/image_location"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_location_blue" />

                <TextView
                    android:id="@+id/text_current_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="35dp"
                    android:text="Current Location"
                    android:textColor="#373737"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/button_edit_current_location"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_edit_blue"
                    android:visibility="gone" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_blue_rounded"
        android:text="UPDATE"
        android:textColor="@color/app_white"
        android:textSize="15sp" />


</RelativeLayout>
