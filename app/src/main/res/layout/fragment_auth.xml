<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/dingdong_blue"
              android:orientation="vertical"
              tools:ignore="MissingPrefix">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_logo"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/app_white"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/signup_container"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">

            <TextView
                fontPath="@string/font_roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:text="SIGNUP"
                android:textColor="@color/grey_blue_text_selector"
                android:textSize="13sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/grey_blue_bg_selector"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/signin_container"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">

            <TextView
                fontPath="@string/font_roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:text="LOGIN"
                android:textColor="@color/grey_blue_text_selector"
                android:textSize="13sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/grey_blue_bg_selector"/>
        </RelativeLayout>
    </LinearLayout>

    <ViewAnimator
        android:id="@+id/auth_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="36dp"
                android:paddingRight="36dp">

                <TextView
                    fontPath="@string/font_roboto_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="Let's get you started"
                    android:textColor="@color/textColorBlack"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:textColor="@color/textColorBlack"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/dividerGrey"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/textColorBlack"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/dividerGrey"/>

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Mobile number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/textColorBlack"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/dividerGrey"/>

                <EditText
                    android:id="@+id/choose_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Choose password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/textColorBlack"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/dividerGrey"/>

                <Button
                    android:id="@+id/signup"
                    fontPath="@string/font_roboto_medium"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/button_blue_rounded"
                    android:text="Signup"
                    android:textColor="@color/app_white"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="36dp"
            android:paddingRight="36dp">

            <TextView
                fontPath="@string/font_roboto_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Welcome back"
                android:textColor="@color/textColorBlack"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="Email or Mobile number"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/textColorBlack"
                android:textSize="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/dividerGrey"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/textColorBlack"
                android:textSize="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/dividerGrey"/>

            <Button
                android:id="@+id/signin"
                fontPath="@string/font_roboto_medium"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_blue_rounded"
                android:text="Signin"
                android:textColor="@color/app_white"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/reset_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Problems logging in? "
                    android:textColor="@color/textColorBlack"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset Password"
                    android:textColor="@color/textColorNavyBlue"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </ViewAnimator>
</LinearLayout>