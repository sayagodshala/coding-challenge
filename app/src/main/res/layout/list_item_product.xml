<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_top_spacer"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/linear_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_top_spacer"
        android:background="@drawable/button_product"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_dummy"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_product_image" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">


            <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textAllCaps="true"
                android:textColor="@color/dingdong_orange"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_type"
                android:text="Product Name"
                android:layout_marginRight="10dp"
                android:textAllCaps="true"
                android:textColor="#323232"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="Lorem ipsum product description"
                android:textColor="#6b6b6b"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_description"
                android:clickable="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="70dp"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="9dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_rupee1" />

                    <TextView
                        android:id="@+id/text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="198"
                        android:textColor="#323232"
                        android:textSize="17sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/textnotcater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="50dp"
                    android:text="we do not "
                    android:textColor="#323232"
                    android:textSize="17sp"
                    android:textStyle="italic"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/linear_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_add_product"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_add_white" />

                    <TextView
                        android:id="@+id/txtadd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:text="ADD"
                        android:textColor="@color/app_white"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l1_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/button_decrement"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/minus_icon"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/text_nos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="01"
                        android:textColor="#323232"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/button_increment"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/plus_icon"
                        android:clickable="true" />
                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/view_bottom_spacer"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/linear_selector" />
</RelativeLayout>
