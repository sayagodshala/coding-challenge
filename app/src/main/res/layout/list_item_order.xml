<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_top_spacer"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/linear_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_top_spacer"
        android:background="@drawable/button_product"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/text_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum product"
            android:textColor="@color/grey10"
            android:textAllCaps="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_orderid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum product"
            android:textAllCaps="true"
            android:textColor="@color/grey6"
            android:textSize="12sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/grey5" />

        <LinearLayout
            android:id="@+id/container_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:layout_marginRight="30dp"
                android:textColor="@color/grey10"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="9dp"
                android:src="@drawable/ic_rupee1" />

            <TextView
                android:id="@+id/text_order_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:layout_marginLeft="2dp"
                android:textColor="@color/grey10"
                android:textSize="12sp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:id="@+id/container_placed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_order_placed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placed"
                    android:textColor="@color/grey12"
                    android:textSize="11sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/container_dispatched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:alpha="0.2"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_order_dispatched" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dispatched"
                    android:textColor="@color/grey12"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_delivered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:alpha="0.2"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_order_delivered" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered"
                    android:textColor="@color/grey12"
                    android:textSize="11sp" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/view_bottom_spacer"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linear_selector"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp" />
</RelativeLayout>
