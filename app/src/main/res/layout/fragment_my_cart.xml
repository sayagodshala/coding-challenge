<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    tools:ignore="MissingPrefix"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_my_cart" />

    <RelativeLayout
        android:id="@+id/container_cart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:clickable="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dingdong_blue_dark" />


        <TextView
            android:id="@+id/text_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Checkout"
            android:layout_centerVertical="true"
            android:textColor="@color/dingdong_blue"
            android:textSize="20sp" />


        <LinearLayout
            android:id="@+id/layout_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/text_checkout"
            android:clickable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_rupee1" />

            <TextView
                android:id="@+id/text_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="198"
                android:textColor="#323232"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/dingdong_blue_dark"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/button_forward"/>

        </LinearLayout>



    </RelativeLayout>

    <ListView
        android:id="@+id/list_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/container_cart"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none"></ListView>

    <LinearLayout
        android:id="@+id/container_shopnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/grey_cart"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey5"
            android:textSize="15sp"
            android:text="Currently you have no items in your cart"/>


        <Button
            android:id="@+id/button_shopnow"
            fontPath="@string/font_roboto_medium"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_blue_rounded"
            android:text="Shop Now"
            android:textColor="@color/app_white"
            android:textSize="16sp"/>


    </LinearLayout>

</RelativeLayout>