<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:ignore="MissingPrefix">


    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:text="It's our top priority to keep your \ntransactions or delivery private."
                android:textColor="@color/textColorBlack"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:text="Our delivery boy will contact you for safe delivery."
                android:textColor="@color/textColorBlack1"
                android:layout_marginBottom="50dp"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/text_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Discount"
                android:textColor="@color/dingdong_orange"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:layout_gravity="center_horizontal"
                android:text="Payable Amount"
                android:textColor="@color/dingdong_blue_dark"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rupee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_rupee1" />

                    <TextView
                        android:id="@+id/text_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/rupee"
                        android:text="RS"
                        android:textColor="#323232"
                        android:textSize="50sp" />

                    <View
                        android:id="@+id/dash"
                        android:layout_width="80dp"
                        android:layout_height="5dp"
                        android:layout_centerInParent="true"
                        android:background="@color/dingdong_red" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_price_after_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rupee_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_rupee1" />

                    <TextView
                        android:id="@+id/text_total_price_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/rupee_discount"
                        android:text="RS"
                        android:textColor="#323232"
                        android:textSize="50sp" />

                </RelativeLayout>


            </LinearLayout>


            <View
                android:layout_width="250dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/grey3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:text="For now we only support cash on delivery!"
                android:textColor="@color/grey5"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_product_normal"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Address"
                    android:textColor="@color/grey10"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_delivery_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/grey7"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/button_pay"
        fontPath="@string/font_roboto_medium"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_blue_rounded"
        android:text="Cash On Delivery"
        android:textColor="@color/app_white"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/container_no_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/event_no_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection Lost!"
            android:textColor="@color/grey9"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please check your internet settings."
            android:textColor="@color/grey5"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_enable_data"
            fontPath="@string/font_roboto_medium"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_blue_rounded"
            android:text="SETTINGS"
            android:textColor="@color/app_white"
            android:textSize="16sp" />


    </LinearLayout>

</RelativeLayout>