<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/text_closed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dingdong_blue_light"
        android:gravity="center"
        android:padding="5dp"
        android:text="Sorry! We are closed for the day."
        android:textColor="@color/app_white" />


    <RelativeLayout
        android:id="@+id/container_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text_closed"
        android:clickable="true">

        <ImageView
            android:id="@+id/location"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_location_blue" />

        <ImageView
            android:id="@+id/image_edit"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_edit_blue" />

        <TextView
            android:id="@+id/current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/image_edit"
            android:layout_toRightOf="@id/location"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Location"
            android:textColor="@color/grey5"
            android:textSize="14sp"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey4" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_cart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:clickable="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dingdong_blue_dark" />


        <RelativeLayout
            android:id="@+id/relative_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_drawer_cart" />

            <TextView
                android:id="@+id/text_total_items"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/blue_circle"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/app_white"
                android:textSize="10sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/relative_cart"
            android:clickable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_rupee1" />

            <TextView
                android:id="@+id/text_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="198"
                android:textColor="#323232"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/dingdong_blue_dark"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/button_forward" />

        </LinearLayout>


    </RelativeLayout>

    <ListView
        android:id="@+id/list_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/container_cart"
        android:layout_below="@id/container_location"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none"></ListView>

    <LinearLayout
        android:id="@+id/container_no_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/event_no_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Location Services Disabled"
            android:textColor="@color/grey9"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enable location services."
            android:textColor="@color/grey5"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_enable_location"
            fontPath="@string/font_roboto_medium"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_blue_rounded"
            android:text="ENABLE"
            android:textColor="@color/app_white"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/event_no_empty_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorry, unable to load data!."
            android:textColor="@color/grey5"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_reload"
            fontPath="@string/font_roboto_medium"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_blue_rounded"
            android:text="Reload"
            android:textColor="@color/app_white"
            android:textSize="16sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_no_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/event_no_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Connection Lost!"
            android:textColor="@color/grey9"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please check your internet settings."
            android:textColor="@color/grey5"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_enable_data"
            fontPath="@string/font_roboto_medium"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_blue_rounded"
            android:text="SETTINGS"
            android:textColor="@color/app_white"
            android:textSize="16sp" />


    </LinearLayout>


</RelativeLayout>
